{
  "name": "nest-starter",
  "version": "1.0.0",
  "description": "Nest.js boilerplate for minimalists",
  "author": "crazyoptimist<me@crazyoptimist.net>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "IS_TS_NODE=true ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d typeorm.config.ts",
    "db:migrate": "npm run typeorm migration:generate src/migrations/$npm_config_name",
    "db:upgrade": "yarn typeorm migration:run",
    "db:downgrade": "yarn typeorm migration:revert",
    "db:drop": "npm run typeorm schema:drop",
    "prepare": "husky install",
    "deploy": "npm ci && npm run build && npm run start:prod"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.321.1",
    "@aws-sdk/lib-dynamodb": "^3.321.1",
    "@nest-dynamodb/typedorm": "^1.0.1",
    "@nestjs/common": "^9.0.11",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.11",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.11",
    "@nestjs/swagger": "^6.1.2",
    "@nestjs/typeorm": "^9.0.1",
    "@typedorm/common": "^1.15.4",
    "@typedorm/core": "^1.15.4",
    "@vendia/serverless-express": "^4.10.1",
    "aws-sdk": "^2.1367.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.0",
    "lint-staged": "^13.0.3",
    "module-alias": "^2.2.2",
    "mysql2": "^3.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.3",
    "source-map-support": "^0.5.21",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.3.9"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.2",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.0.11",
    "@types/aws-lambda": "^8.10.119",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.16",
    "@types/passport-jwt": "^3.0.6",
    "@types/source-map-support": "^0.5.6",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "husky": "^8.0.1",
    "jest": "^29.0.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "run-script-webpack-plugin": "^0.1.1",
    "supertest": "6.3.3",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.5.5",
    "webpack": "^5.74.0",
    "webpack-node-externals": "^3.0.0"
  },
  "_moduleAliases": {
    "@app": "./dist",
    "@modules": "./dist/modules"
  }
}

{
  "name": "nest-starter",
  "version": "1.0.0",
  "description": "Nest.js boilerplate for minimalists",
  "author": "crazyoptimist<me@crazyoptimist.net>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "IS_TS_NODE=true ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d typeorm.config.ts",
    "db:migrate": "npm run typeorm migration:generate src/migrations/$npm_config_name",
    "db:upgrade": "yarn typeorm migration:run",
    "db:downgrade": "yarn typeorm migration:revert",
    "db:drop": "npm run typeorm schema:drop",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi",
    "deploy": "npm ci && npm run build && npm run start:prod",
    "update-modules": "npm i -g npm-check-updates && ncu -u && npm i"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.395.0",
    "@aws-sdk/lib-dynamodb": "^3.395.0",
    "@aws-sdk/smithy-client": "^3.374.0",
    "@nest-dynamodb/typedorm": "^1.1.0",
    "@nestjs/common": "^10.2.1",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.2.1",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.1",
    "@nestjs/platform-express": "^10.2.1",
    "@nestjs/swagger": "^7.1.8",
    "@nestjs/typeorm": "^10.0.0",
    "@typedorm/common": "^1.15.4",
    "@typedorm/core": "^1.15.4",
    "@vendia/serverless-express": "^4.10.4",
    "aws-sdk": "^2.1441.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "lint-staged": "^14.0.1",
    "module-alias": "^2.2.3",
    "mysql2": "^3.6.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "source-map-support": "^0.5.21",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.12",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.1",
    "@types/aws-lambda": "^8.10.119",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.2",
    "@types/passport-jwt": "^3.0.9",
    "@types/source-map-support": "^0.5.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "husky": "^8.0.3",
    "jest": "^29.6.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "run-script-webpack-plugin": "^0.2.0",
    "supertest": "6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-node-externals": "^3.0.0"
  },
  "_moduleAliases": {
    "@app": "./dist",
    "@modules": "./dist/modules"
  }
}
